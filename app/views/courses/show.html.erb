<br><br>
<h2><%= @course.name %></h2>
<br>
<h4>Videos</h4>
<table class="table table-bordered table-condensed table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @course.posts.each do |post| %>
    <tr>
    <td>
    <%= link_to course_post_path(@course, post) do %>
      <%= post.title %>
    <% end %>
    </td>
      <td><%= post.body.html_safe %></td>
      <td><%= link_to 'Show', course_post_path(@course, post), class: "btn btn-outline-success btn-sm" %></td>
      <% if current_user.try(:admin?) %>
      <td>
        <%= link_to 'Edit', edit_course_post_path(@course, post), class: "btn btn-outline-secondary btn-sm" if current_user.try(:admin?)  %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Video', new_course_post_path(@course), class: "btn btn-outline-info" if current_user.try(:admin?) %>