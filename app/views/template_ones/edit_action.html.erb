<%= render 'template_ones/edit_partials/action' %> 


<div class='container'> 
<%= bootstrap_flash %>  
<%= simple_form_for(@template_one) do |f| %>


  <div class="form-inputs">
    <%= f.input :action_hide, label: "Hide this module on main page?" %> 
<%= f.input :action_text_1 %>
<%= f.input :action_text_2 %>
<%= f.input :action_text_3 %>
<%= f.input :action_text_4 %>
<%= f.input :action_text_5 %>
<%= f.input :action_text_6 %>   
<%= f.input :action_text_7 %>
<%= f.input :action_button_text %>
<%= f.input :action_use_default_image, label: "Use template default image?" %>
<label>Add Custom Image</label>
<%= f.input :action_image, as: :file, label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, data: {disable_with: 'One moment please...'} %> 
     | <%= link_to "Home", root_path, class: "btn btn-default" %> 
  </div>
<% end %>
</div>