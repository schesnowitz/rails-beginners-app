      <%= f.input :footer_social_url_3, h5: "Set link: 'example.com'" %>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-4">
      <h5>Socal Link 4</h5>
      <%= f.input :footer_hide_social_4, h5: "Hide this from the view?" %>
      <%= f.input :footer_social_icon_4, collection: TemplateOne::FA_BRAND_ICONS, include_blank: false %>
      <%= f.input :footer_social_url_4, h5: "Set link: 'example.com'" %>
    </div>
    <div class="col-sm-4">
      <h5>Socal Link 5</h5>
