<%= render 'template_ones/edit_partials/contact' %> 


<div class='container'> 
<%= bootstrap_flash %>  
<%= simple_form_for(@template_one) do |f| %>


  <div class="form-inputs">
    <%= f.input :contact_hide, label: 'Hide this module?' %>
    <%= f.input :contact_title %>
    <%= f.input :contact_text %>

    <%= f.input :email_address_1 %>
    <%= f.input :email_address_2 %>
    <%= f.input :email_address_3 %>

    <%= f.input :contact_sender_hide_name %>   
    <%= f.input :contact_sender_name %> 
    <%= f.input :contact_sender_hide_email %> 
    <%= f.input :contact_sender_email %>
    <%= f.input :contact_sender_hide_phone %>
    <%= f.input :contact_sender_phone %>
    <%= f.input :contact_sender_hide_message %>
    <%= f.input :contact_sender_message %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, data: {disable_with: 'Updating Header...'} %> 
     | <%= link_to "Home", root_path, class: "btn btn-default" %> 
  </div>
<% end %>
</div>
