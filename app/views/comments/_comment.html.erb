  <hr>
<p>
  <% if comment.user.image.present? %>
  <%= image_tag comment.user.image_url(:thumb), class: 'rounded-circle' %>
  <% else %>
  <%= image_tag 'no_image', class: 'rounded-circle' %>
  <% end %>
  <h6><%= comment.user.username %></h6> 
  Posted <%= time_ago_in_words(comment.created_at)  %> ago <br>

  <%= comment.body %>
</p>

<% if current_user == comment.user %>   
<%= link_to 'Edit Comment', edit_post_comment_path(comment.post, comment), class: 'btn btn-outline-info btn-sm' %> 
<%= link_to 'Delete', [comment.post, comment], method: :delete, data: {confirm: "This can't be undone!" }, class: 'btn btn-danger btn-sm'%>
<% end %>
                