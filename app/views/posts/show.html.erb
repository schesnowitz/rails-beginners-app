<br>
<%= link_to 'Course Index', course_path(@course), class: 'btn btn-outline-secondary' %>
<p>
  <% if @post.user.image.present? %>
  <% image_tag @post.user.image_url(:thumb), class: 'rounded-circle' %>
  <% else %>
  <% image_tag 'no_image.png', class: 'rounded-circle' %>
  <% end %>
</p>
<div class="card text-center">
  <div class="card-header">
    Section: <%= @post.section_number %>
    <span class="badge badge-primary">Lecture Number: <%= @post.lecture_number %></span> 
  </div>
  <div class="card-block">
    <h4 class="card-title"><%= @post.title %></h4>
    <p class="card-text"></p>
  </div>
  <div class="card-footer text-muted">
    <%= @post.section_name %>
  </div>
</div>
<%= @post.body.html_safe %>
<p>.....</p>
<%= render @post.comments.order(created_at: :desc ) %> 
<p>
  <% if current_user.try(:admin?) %> 
  <br>
<hr>
<strong>Add Comment:</strong>
<br>
<hr>
<%= render 'comments/form' %> 
</p>
<% link_to 'Edit', edit_course_post_comment_path(@course, @post.comments) if @post.user == current_user %> 
<% end %> 
<%= link_to 'Course Index', course_path(@course), class: 'btn btn-outline-secondary' %>
